@using LoadoutBuilder.ViewModels.Loadout;
@model IEnumerable<LoadoutIndexViewModel>
<h2>Loadouts</h2>

<div class="row">
    @foreach (var loadout in Model)
    {
        <div class="col-md-4">
            <div class="card mb-4 shadow-sm">
                <div class="card-body">
                    <h5 class="card-title">@loadout.Name</h5>
                    <p class="card-text">@loadout.WeaponSlotCount Slots</p>
                </div>
            </div>
        </div>
    }
</div>

<a asp-action="Create" class="btn btn-success mb-4">Add a Loadout</a>
